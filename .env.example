# ========================================
# üåê CORE SETTINGS
# ========================================
RUN_MODE=dryrun                  # Options: live, dryrun, sandbox
DEFAULT_BROKER=oanda             # Fallback broker if none passed via CLI
ENABLED_BROKERS=kraken,oanda     # Brokers to launch in parallel
DRY_RUN=true                     # true = simulation only
TIMEFRAME=M5                     # Candle granularity for OANDA feed

# Top-10 diversified Forex pairs
PAIRS=EUR/USD,GBP/USD,USD/JPY,AUD/JPY,USD/CAD,NZD/USD,EUR/JPY,GBP/JPY,EUR/GBP,AUD/USD
# Kraken-compatible crypto pairs
KRAKEN_PAIRS=BTC/USD,ETH/USD,ADA/USD,XRP/USD,SOL/USD,DOT/USD

# ========================================
# üìà SCORING + FILTER LOGIC
# ========================================
MIN_SCORE_THRESHOLD=7.0          # Ignore trades below this score
PAIR_COOLDOWN_SECONDS=60          # Per-pair cooldown after a strong signal
CYCLE_DELAY_SECONDS=30            # Full-scan delay for live safety
PAIR_DELAY_SECONDS=5              # Delay between pairs in loop

# === Adaptive Scoring Throttle ===
BASE_SCORE_THRESHOLD=6.0
ADAPTIVE_MIN_SCORE=5.0
ADAPTIVE_MAX_SCORE=8.0
VOL_SPIKE_BOOST=1.3
ASIA_SESSION_HOURS=0-7
ADAPTIVE_MODE=true


# === Position Sizing Config ===
ACCOUNT_BALANCE=300
RISK_PCT=0.12
LEVERAGE=20
MIN_LOT_SIZE=0.01
MAX_LOT_SIZE=1.0

# ========================================
# üìä TRADE RISK + STRATEGY
# ========================================
RISK_PCT=0.12
TAKE_PROFIT_PCT=0.25
STOP_LOSS_PCT=0.04
TRAILING_STOP_PCT=0.02
MAX_DAILY_DRAWDOWN_PCT=0.10
MAX_CONSECUTIVE_LOSSES=3
DAILY_PROFIT_TARGET=0.03

# ========================================
# üîê WEBHOOK & SECURITY
# ========================================
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# ========================================
# üõë KILL SWITCH
# ========================================
# Always monitored. Controlled via `.kill_extremeviper` file.
# Triggered from Telegram or manually.

# ========================================
# üß† RESILIENCE CONFIG
# ========================================
MONITOR_INTERVAL=60              # Seconds between broker ping checks
MAX_BROKER_FAILURES=3            # Failures before fallback to DRY_RUN
ENABLE_TELEGRAM_ALERTS=true      # Notify on crash / fallback

# ========================================
# üì© TELEGRAM ALERTS
# ========================================
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# === Broker Fallback ===
PRIMARY_BROKER=oanda
FALLBACK_BROKER=kraken

# ========================================
# üè¶ BROKER CREDENTIALS
# ========================================
OANDA_API_KEY=YOUR_OANDA_API_KEY_HERE
OANDA_ACCOUNT_ID=YOUR_OANDA_ACCOUNT_ID_HERE
OANDA_BASE_URL=https://api-fxpractice.oanda.com/v3

KRAKEN_API_KEY=YOUR_KRAKEN_API_KEY_HERE
KRAKEN_API_SECRET=YOUR_KRAKEN_API_SECRET_HERE
KRAKEN_BASE_URL=https://api.kraken.com

ALPACA_API_KEY=YOUR_ALPACA_API_KEY_HERE
ALPACA_API_SECRET=YOUR_ALPACA_API_SECRET_HERE

TOS_CLIENT_ID=your_client_id

# ========================================
# üßæ LOGGING / WATCHLIST
# ========================================
WATCHLIST=BTC/USD,ETH/USD
LOG_LEVEL=INFO
